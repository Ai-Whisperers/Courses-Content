{
  "project_settings": {
    "name": "Marketing AI Project",
    "type": "marketing-content",
    "language": "en"
  },
  "context_files": {
    "always_include": [
      "GEMINI.md",
      "brand-guidelines/voice.md",
      "content/templates/*.md"
    ],
    "never_include": [
      ".env*",
      "**/credentials/**",
      "**/secrets/**",
      "node_modules/**"
    ]
  },
  "workspace_settings": {
    "default_file_extension": ".md",
    "auto_save": true,
    "format_on_save": true
  },
  "ai_preferences": {
    "response_style": "detailed",
    "tone": "professional",
    "include_examples": true,
    "suggest_improvements": true
  },
  "content_guidelines": {
    "blog_posts": {
      "min_words": 1000,
      "max_words": 2500,
      "structure": ["intro", "body", "conclusion", "cta"],
      "required_elements": ["hook", "examples", "actionable_advice"]
    },
    "social_media": {
      "linkedin": {
        "max_chars": 3000,
        "recommended_chars": 200,
        "tone": "professional"
      },
      "twitter": {
        "max_chars": 280,
        "tone": "concise"
      }
    },
    "email": {
      "subject_max_chars": 50,
      "preview_max_chars": 90,
      "body_paragraphs": "short"
    }
  },
  "quality_checks": {
    "review_framework": {
      "enabled": true,
      "steps": [
        "Read full output",
        "Evaluate accuracy",
        "Verify brand voice",
        "Improve clarity",
        "Enhance with expertise",
        "Watch for AI tells"
      ]
    },
    "banned_phrases": [
      "In today's fast-paced world",
      "It's important to note",
      "At the end of the day",
      "Game-changing",
      "Revolutionary",
      "Unlock your potential"
    ],
    "required_elements": [
      "specific_examples",
      "actionable_advice",
      "brand_voice_match"
    ]
  },
  "templates": {
    "blog_outline": "content/templates/blog-outline.md",
    "social_batch": "content/templates/social-batch.md",
    "email_sequence": "content/templates/email-sequence.md",
    "content_brief": "content/templates/seo-brief.md"
  },
  "integrations": {
    "google_docs": {
      "enabled": true,
      "auto_sync": false
    },
    "google_sheets": {
      "enabled": true,
      "data_analysis": true
    }
  }
}
