{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Read(.)",
      "Edit(.)",
      "Bash(npm test *)",
      "Bash(npm run *)",
      "Bash(npx jest *)",
      "Bash(npx playwright *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)"
    ],
    "ask": [
      "Bash(npm install *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git checkout *)",
      "Write(**/package.json)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/**)",
      "Read(config/secrets.json)",
      "Read(credentials.json)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(rm -rf:*)"
    ]
  }
}
