{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Complete GitHub integration for repositories, issues, and PRs",
      "capabilities": [
        "repository_management",
        "issue_tracking",
        "pull_requests",
        "code_review",
        "actions_workflows"
      ],
      "useCases": [
        "Create and manage repositories",
        "Review and merge pull requests",
        "Track issues and projects",
        "Automate workflows with Actions",
        "Search code across repositories"
      ],
      "requirements": {
        "token": "GitHub Personal Access Token with repo, workflow, and read:org scopes"
      }
    }
  }
}
