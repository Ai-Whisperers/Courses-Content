{
  "mcpServers": {
    "notion": {
      "command": "npx",
      "args": [
        "-y",
        "@suekou/mcp-notion-server"
      ],
      "env": {
        "NOTION_API_TOKEN": "${NOTION_API_TOKEN}"
      },
      "description": "Access and manage Notion workspaces, pages, and databases",
      "capabilities": [
        "page_management",
        "database_operations",
        "content_creation",
        "workspace_organization"
      ],
      "useCases": [
        "Read and edit Notion pages",
        "Query databases",
        "Create structured notes",
        "Organize project documentation"
      ],
      "requirements": {
        "token": "Notion Integration Token from https://www.notion.so/my-integrations"
      }
    }
  }
}
