{
  "name": "playwright-automation-project",
  "version": "1.0.0",
  "description": "QA Automation project with Playwright, TypeScript, and best practices",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project=mobile-chrome",
    "test:api": "npx playwright test tests/api",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:sanity": "npx playwright test --grep @sanity",
    "test:regression": "npx playwright test --grep @regression",
    "test:dev": "cross-env TEST_ENV=dev npm run test",
    "test:qa": "cross-env TEST_ENV=qa npm run test",
    "test:staging": "cross-env TEST_ENV=staging npm run test",
    "test:ci": "npx playwright test --project=chromium --workers=1",
    "test:shards": "npx playwright test --shard=$SHARD_INDEX/$SHARD_TOTAL",
    "test:retry": "npx playwright test --retries=2",
    "test:repeat": "npx playwright test --repeat-each=3",
    "codegen": "npx playwright codegen",
    "report": "npx playwright show-report",
    "report:open": "open playwright-report/index.html",
    "trace": "npx playwright show-trace",
    "install:browsers": "npx playwright install --with-deps",
    "install:chromium": "npx playwright install chromium",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "pretest": "npm run typecheck",
    "prepare": "husky install",
    "clean": "rimraf playwright-report test-results coverage dist",
    "docs": "typedoc --out docs src"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "automation",
    "e2e",
    "qa",
    "page-object-model",
    "cross-browser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-playwright": "^1.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.8.0",
    "allure-playwright": "^3.0.0",
    "axe-html-reporter": "^2.2.0",
    "dotenv": "^16.4.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
